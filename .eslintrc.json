{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "rules": {
        "semi": "off",
        "curly": "warn",
        "prefer-const": "warn",
        "no-extra-semi": "warn",
        "no-var": "warn",
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "indent": [
            "warn",
            4
        ],
        "semi": [
            "error",
            "never"
        ],
        "eqeqeq": "error"
    }
}
